<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetail"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_centerHorizontal="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/ivImage"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:id="@+id/tvTitle"
                android:layout_below="@+id/ivImage"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleMovie"
                android:layout_below="@+id/tvTitle"
                android:text="leMovieTitle"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleMovie"
                android:layout_marginTop="10dp"
                android:text="Year:"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/yearMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvYear"
                android:text="leMovieYear"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tvImdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yearMovie"
                android:layout_marginTop="10dp"
                android:text="IMDB:"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/imdbMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvImdb"
                android:text="leMovieImdb"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/btnSaveDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imdbMovie"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Save movie"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:padding="15dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>